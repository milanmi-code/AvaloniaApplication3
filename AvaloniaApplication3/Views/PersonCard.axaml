<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication3.PersonCard">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="5*"/>
			<ColumnDefinition Width="5*"/>
			<ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Name: "/>
        <Label Grid.Row="0" Grid.Column="1" Content="{Binding Name}"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Email: "/>
        <Label Grid.Row="1" Grid.Column="1" Content="{Binding Email}"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Age: "/>
        <Label Grid.Row="2" Grid.Column="1" Content="{Binding Age}"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Height: "/>
        <Label Grid.Row="3" Grid.Column="1" Content="{Binding Height}"/>

        <Button Grid.Row="3" Grid.Column="2" Command="{Binding DeleteCommand}" Content="X"></Button>
    </Grid>
</UserControl>
